<!doctype html>
<html lang="en">

<head>
  <title>Cupcakes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body>
  <div class="container">
    <h2>Our Cupcakes!!!</h2>

    <ul class='cupcakes-list'>

    </ul>

    <form action="/api/cupcakes" method="post">
      <label>Flavor
        <input name="flavor" type="text" required>
      </label><br>
      <label>Size
        <input name="size" type="text" required>
      </label><br>
      <label>Rating
        <input name="rating" type="number" required>
      </label><br>
      <label>Image URL
        <input name="image_url" type="url" required>
      </label>

      <p><button class="btn btn-primary" type="submit">Add a cupcake!</button></p>
    </form>
  </div>
  <script type="module">import "/static/cupcakes.js"</script>
</body>

</html>